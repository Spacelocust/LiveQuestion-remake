{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Poser votre question</h2>
        {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-6">
                    {{ form_row(form.title,{'label':'Quelle est votre question ?'}) }}
                </div>
                <div class="d-flex justify-content-start mt-4">
                    <div class="col-md-3 mr-3">
                        {{ form_row(form.category,{'label':'Selectionner une catégorie'}) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.visibility,{'label':'Selectionner la visibilitée'}) }}
                    </div>
                </div>
            </div>
        <button class="btn btn-primary mt-4 login-form" type="submit">Valider</button>
        {{ form_end(form) }}
    </div>
{% endblock %}